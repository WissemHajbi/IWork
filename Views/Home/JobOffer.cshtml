@model EmployerModel 

@{
    ViewData["Title"] = "Job Offer Page";
}

<div class="container mt-5">
    <div class="container">
        <div class="card shadow-lg p-3 mb-5 bg-body rounded" style="width:100%">
            <div class="row d-flex justify-content-center mb-5">
                <img src="@Model.CoverImage" class="card-img-top" style="height:20rem;width:25rem;margin-top:50px">
            </div>
            <div class="card-body p-3 mt-3 ms-5 ">
                    <p class="card-text fs-3">@Model.Name</p>
                    <hr>
                    <p class="card-text"><i class="bi bi-people-fill"></i> Field: @Model.Field</p>
                    <p class="card-text"><i class="bi bi-envelope-at"></i> Email: @Model.Email</p>
                    <p class="card-text"><i class="bi bi-calendar-check"></i> Date: @Model.StartDate</p>
                    <p class="card-text"><i class="bi bi-briefcase"></i> @Model.FPTime</p>
                    <hr>

                @* carousel section *@
                    <div id="carouselControls" class="carousel carousel-dark slide m-5" data-bs-ride="carousel" >
                        <div style="margin-left:15%;margin-right:15%">
                            <div class="card shadow-lg mb-4 rounded " >
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <div class="row d-flex justify-content-center">
                                            <img src="@Model.Image1" class="card-img-top p-2" style="height:320px;width:95%" />
                                        </div>
                                    </div>        
                                    <div class="carousel-item">
                                        <div class="row d-flex justify-content-center">
                                            <img src="@Model.Image2" class="card-img-top p-2" style="height:320px;width:95%" />
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <button class="carousel-control-prev" style="width:50px;" type="button" data-bs-target="#carouselControls"
                            data-bs-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Previous</span>
                        </button>
                        <button class="carousel-control-next" style="width:50px;" type="button" data-bs-target="#carouselControls"
                            data-bs-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="visually-hidden">Next</span>
                        </button>
                    </div>

                    <hr>
                    <p class="text-dark fs-5">Description : </p>
                    <p class="card-text nbtext fst-normal lh-sm text-muted ps-5 pe-5">@Model.Description</p>

                <a asp-controller="Home" asp-action="JobApplyForm" class="btn filterbtn btn-outline-success mt-5">Apply</a>
            </div>
        </div>
    </div>
</div>