@model ApplyModel

@{
    ViewData["Title"] = "Job Apply Form";
}
<div class="container mt-5">

    <div class="row text font-monospace text-dark text-start">
        <div class="col-md-8 offset-2 shadow-lg p-3 mb-5 rounded">
            <div class="row">
                <div class="col-md-8 offset-2">
                    <form asp-action="JobApplyForm">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <p class="text-center mt-3" style="font-size:15px">Personal Information</p>
                        <hr>

                        <div class="form-group mb-2 "hidden>
                            <label asp-for="JobId" class="control-label m-2"></label>
                            <input asp-for="JobId" class="form-control" value=@Model.JobId/>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Name" class="control-label m-2"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Prename" class="control-label m-2"></label>
                            <input asp-for="Prename" class="form-control" />
                            <span asp-validation-for="Prename" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Adresse" class="control-label m-2"></label>
                            <input asp-for="Adresse" class="form-control" />
                            <span asp-validation-for="Adresse" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-2">
                            <label asp-for="Email" class="control-label m-2"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <p class="text-center mt-5" style="font-size:15px">Qualifications</p>
                        <hr>

                        <div class="form-group mb-2">
                            <label asp-for="Education" class="control-label m-2"></label>
                            <textarea asp-for="Education" class="form-control" style="height:100px"></textarea>
                            <span asp-validation-for="Education" class="text-danger"></span>
                        </div>
                        <div class="form-group mb-4">
                            <label asp-for="Experience" class="control-label m-2"></label>
                            <textarea asp-for="Experience" class="form-control" style="height:100px"></textarea>
                            <span asp-validation-for="Experience" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Add" class="btn btn-outline-success" />
                            <a class="btn btn-outline-secondary m-2" asp-action="JobHunting">Return</a>
                        </div>
                        
                    </form>
                </div>
            </div>
        </div>
    </div>

</div>