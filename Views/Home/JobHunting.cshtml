	<input type="radio" class="btn-check" name="btnradio" id="btnradio1" autocomplete="off" onclick="changeContent('Education')">
  	<label class="btn btn-outline-secondary" for="btnradio1">Education</label>

	<input type="radio" class="btn-check" name="btnradio" id="btnradio2" autocomplete="off" onclick="changeContent('Computer')">
	<label class="btn btn-outline-success" for="btnradio2">Computer science</label>

