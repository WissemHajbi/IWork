	 <div class="col">
		<button  type="submit" class="btn filterbtn btn-outline-secondary" value="All" name="EducationButton" onclick="changeContent('Education')" active>Eductaion</button>
	 </div>
	 <div class="col">
		<button  type="submit" class="btn filterbtn btn-outline-success" value="All" name="ComputerButton" onclick="changeContent('Computer')">Computer science</button>
	 </div>
	 <div class="col">
		<button  type="submit" class="btn filterbtn btn-outline-danger" value="All" name="MedicalButton" onclick="changeContent('Medical')">Medical</button>
	 </div>
</div>


<div class="container">
    <div class="row row-cols-3 mt-5">
		@foreach (var emp in Model)
		{
			<div class="col d-flex justify-content-center">
				<div class="card shadow-lg mb-5 rounded" style="width:21rem" id=@emp.Field>
					<div class="row d-flex justify-content-center">
									<img src="/@emp.CoverImage" class="card-img-top" style="height:280px;width:90%" />
								</div>
								<div class="card-body">
									<div class="row row-cols-2">
											<p class="card-text text-dark">@emp.Name</p>
									</div>
									<hr>
									<samp>
									<p class="card-text" style="font-size:14px;height:55px">@emp.Description
									</p>
									</samp>
									<hr>
								</div>
							</div>			
				</div>
		}
	</div>
</div>